        <attr name="rotation_radius" format="dimension"/>
        <attr name="dot_radius" format="dimension"/>
        <attr name="path_wrapper_circle_radius" format="dimension"/>
        <attr name="bg_color" format="color"/>
        <attr name="dot_middle_color_1" format="color"/>
        <attr name="dot_middle_color_2" format="color"/>
        <attr name="dot_middle_color_3" format="color"/>
        <attr name="dot_middle_color_4" format="color"/>
        <attr name="dot_middle_color_5" format="color"/>
        <attr name="dot_middle_color_6" format="color"/>
